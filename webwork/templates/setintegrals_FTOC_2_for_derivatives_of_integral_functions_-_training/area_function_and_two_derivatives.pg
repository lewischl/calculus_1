###################################
# Setup
Context()->variables->add(t=>'Real',dt=>'Real');
$a=random(1,9,1);

if($a==4 ){$a=10}
$A=$a+1;
$b=$A**2-$a**2;
$f=Formula("sqrt(t**2+$b)");
$F=$f->substitute(t=>'x');
$G=Formula("x/$F");
$fa=Compute("0");
$Fa=Compute("$A");
Context("Fraction");
$Ga=Compute("$a/$A");
Context("Numeric");







$mc = new_checkbox_multiple_choice();
$mc -> qa (
" Select those of the above computations required the use of the Fundamental Theorem of Calculus Part 2?", 

"\( F'($a) \)$BR"
);
$mc -> extra(
"\( F($a) \)$BR",
);

    
    
    
    
