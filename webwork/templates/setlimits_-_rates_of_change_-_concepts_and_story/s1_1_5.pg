$showPartialCorrectAnswers = 1;

$v0 = random(40,100,5);
$t0 = random(2,4,1);

$delta_t_1 = 0.5;
$delta_t_2 = 0.1;
$delta_t_3 = 0.01;
$delta_t_4 = 0.001;
$delta_t_5 = 0.0001;
