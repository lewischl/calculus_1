END_HINT


$ans1 ="$v0-32*$t0-16*0.5";
$ans2 ="$v0-32*$t0-16*0.1";
$ans3 ="$v0-32*$t0-16*0.01";
$ans4 ="$v0-32*$t0";

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));
ANS(num_cmp($ans4));

